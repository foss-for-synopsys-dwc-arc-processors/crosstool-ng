CT_CONFIG_VERSION="4"
CT_EXPERIMENTAL=y
CT_ARCH_ARC=y
CT_ARCH_CPU="arc700"
CT_TARGET_CFLAGS="-matomic"
CT_TARGET_VENDOR="snps"
CT_TARGET_ALIAS_SED_EXPR="s/${CT_TARGET_VENDOR}-//"
CT_TARGET_ALIAS="arc-linux"

CT_KERNEL_LINUX=y
CT_LINUX_SRC_DEVEL=y
CT_LINUX_DEVEL_URL="https://github.com/foss-for-synopsys-dwc-arc-processors/linux.git"
CT_LINUX_DEVEL_REVISION="19e84a74062a21fa8883b80357027e4a93b8a2e3"

CT_GCC_SRC_DEVEL=y
CT_GCC_DEVEL_VCS_git=y
CT_GCC_DEVEL_URL="https://github.com/foss-for-synopsys-dwc-arc-processors/gcc.git"
CT_GCC_DEVEL_REVISION="a01d12e8814c89cd1e131f69a417458ab96e3a21"
CT_CC_GCC_EXTRA_CONFIG_ARRAY="--with-gnu-as --with-gnu-ld"
# CT_CC_GCC_USE_GRAPHITE is not set
# CT_CC_GCC_ENABLE_TARGET_OPTSPACE is not set

CT_BINUTILS_SRC_DEVEL=y
CT_BINUTILS_DEVEL_URL="https://github.com/foss-for-synopsys-dwc-arc-processors/binutils-gdb.git"
CT_BINUTILS_DEVEL_REVISION="4fc001c21a561e42cde9c74bda47f5bac5dbc5ef"

CT_GDB_SRC_DEVEL=y
CT_GDB_DEVEL_URL="https://github.com/foss-for-synopsys-dwc-arc-processors/binutils-gdb.git"
CT_GDB_DEVEL_REVISION="4fc001c21a561e42cde9c74bda47f5bac5dbc5ef"
# CT_GDB_CROSS_PYTHON is not set
CT_DEBUG_GDB=y

CT_LIBC_UCLIBC=y
CT_UCLIBC_SRC_DEVEL=y
CT_UCLIBC_DEVEL_URL="https://github.com/foss-for-synopsys-dwc-arc-processors/uClibc.git"
CT_UCLIBC_DEVEL_REVISION="e0ee76e40129073933e0248f0e9a930caefec11e"
CT_LIBC_UCLIBC_LOCALES=y

CT_CC_LANG_CXX=y
